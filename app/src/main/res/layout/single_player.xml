<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/single_player"
    >

    <TextView
        android:text="SCORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_scores"
        android:textSize="60sp"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:textSize="80sp"
        android:layout_alignBaseline="@+id/txt_scores"
        android:layout_alignBottom="@+id/txt_scores"
        android:layout_toRightOf="@+id/txt_scores"
        android:layout_toEndOf="@+id/txt_scores"
        android:layout_marginLeft="117dp"
        android:layout_marginStart="117dp">

    </TextView>

    <Button
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_exit" />
</RelativeLayout>